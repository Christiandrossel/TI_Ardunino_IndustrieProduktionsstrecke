<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvName"
            android:layout_alignBottom="@+id/btnConnect" android:layout_marginBottom="0dp"
            android:layout_alignTop="@+id/btnConnect" android:layout_marginTop="0dp"
            android:layout_alignParentStart="true" android:layout_marginStart="16dp"/>
    <Button
            android:text="Verbinden"
            android:drawableStart="@drawable/ic_refresh"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content" android:id="@+id/btnConnect"
            android:layout_marginTop="8dp" android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
    <Button
            android:text="'r' senden"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content" android:id="@+id/btnSendR"
            android:layout_marginTop="8dp" android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>